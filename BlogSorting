import re

a = "Using cmd @@@ lets see how to do this @@@ #step 1##step 2# #imge <img #--- Using Registry @@@ lets see ! step 1"

method = a.split("---")
#steps = method[0].split("|")

stepslist = re.findall('#(.+?)#', method[0])
length = len(stepslist)
for x in range(length):
    if stepslist:
        found = stepslist[x]
        if found[:4] == "step":
            print("This is a step")

        if found[:4] == "imge":
            print("This is a image")

        print(found)
